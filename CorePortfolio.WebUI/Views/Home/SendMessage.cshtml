@model Message
<div class="section px-2 px-lg-4 pb-4 pt-5 mb-5" id="contact">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Bana Ulaşın</h2>
        </div>
        <div class="row">
            <div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
                <div class="bg-light my-2 p-3 pt-2">
                    <form method="post" asp-controller="Home" asp-action="SendMessage">
                        <div class="form-group my-2">
                            <label asp-for="SenderName" class="form-label fw-bolder">Adınız Soyadınız</label>
                            <input class="form-control" type="text" asp-for="SenderName" required>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="Email" class="form-label fw-bolder">Email</label>
                            <input class="form-control" type="email" asp-for="Email" required>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="Content" class="form-label fw-bolder">Mesajınız</label>
                            <textarea class="form-control" style="resize: none;" asp-for="Content" rows="4" required></textarea>
                        </div>
                        <button class="btn btn-primary mt-2" type="submit">Gönder</button>
                    </form>
                </div>
            </div>
            @await Component.InvokeAsync("ContactDetail")
        </div>
    </div>
</div>