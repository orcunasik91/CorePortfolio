@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-header">
    <a class="btn btn-warning mx-3" asp-area="" asp-controller="About" asp-action="GetAbout" asp-route-id="1">Düzenle</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="About" asp-action="Index">Hakkımda</a></li>
            <li class="breadcrumb-item active" aria-current="page">Hakkımda</li>
        </ol>
    </nav>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> Başlık </th>
                            <th> Açıklama </th>
                            <th> Yaş </th>
                            <th> Email </th>
                            <th> Telefon </th>
                            <th> Adres </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (About item in Model)
                        {
                            <tr>
                                <td> @item.Title </td>
                                <td> @item.Description.Substring(0,30)... </td>
                                <td> @item.Age </td>
                                <td> @item.Email </td>
                                <td> @item.Phone </td>
                                <td> @item.Address </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>