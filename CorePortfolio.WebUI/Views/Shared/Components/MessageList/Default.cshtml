@model List<Message>
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Mesajlar</h4>
            </div>
            @foreach (Message message in Model)
            {
                <div class="preview-list">
                    <div class="preview-item border-bottom">
                        <div class="preview-thumbnail">
                            <img src="~/CoronaTemplate/template/assets/images/faces/useravatar2.png" alt="image" class="rounded-circle" />
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@message.SenderName</h6>
                                    <p class="text-muted text-small">@message.DateSent.ToString("dd MMM,yyyy")</p>
                                </div>
                                <p class="text-muted">@message.Content.Substring(0,18)...</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>