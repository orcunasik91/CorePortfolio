@model Experience
@{
    ViewData["Title"] = "Yeni Deneyim Ekle";
}
<div class="page-header">
    <a class="btn btn-primary mx-3" asp-area="Admin" asp-controller="Experiences" asp-action="Index">Geri Dön</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Experiences" asp-action="Index">Deneyimler</a></li>
            <li class="breadcrumb-item active" aria-current="page">Deneyim Oluştur</li>
        </ol>
    </nav>
</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Oluştur</h4>
            <form class="forms-sample" asp-area="Admin" asp-controller="Experiences" asp-action="CreateExperience" method="post">
                <div class="form-group row">
                    <label asp-for="ExperienceName" class="col-sm-3 col-form-label">Başlık</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="ExperienceName" placeholder="Deneyim">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ExperienceDate" class="col-sm-3 col-form-label">Deneyim Süresi</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="ExperienceDate" placeholder="Deneyim Süresi">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" rows="4" asp-for="Description" placeholder="Açıklama"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ImageUrl" class="col-sm-3 col-form-label">Görsel</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel">
                    </div>
                </div>
                <div class="form-group row justify-content-end align-items-end mr-0">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>