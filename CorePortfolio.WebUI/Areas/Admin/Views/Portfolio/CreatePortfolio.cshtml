@model Portfolio  
@{
    ViewData["Title"] = "Portfolio Oluştur";
}
<div class="page-header">
    <a class="btn btn-primary mx-3" asp-area="Admin" asp-controller="Portfolio" asp-action="Index">Geri Dön</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Portfolio" asp-action="Index">Portfolio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Yeni Proje</li>
        </ol>
    </nav>
</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Proje Oluştur</h4>
            <form class="forms-sample" asp-area="Admin" asp-controller="Portfolio" asp-action="CreatePortfolio" method="post">
                <div class="form-group row">
                    <label asp-for="ProjectName" class="col-sm-3 col-form-label">Proje Adı</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="ProjectName" placeholder="Proje">
                    </div>
                    <div class="col-sm-12">
                        <span class="text-danger" asp-validation-for="ProjectName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ImageUrl" class="col-sm-3 col-form-label">Görsel</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Proje Görsel">
                    </div>
                </div>
                <div class="form-group row justify-content-end align-items-end mr-0">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>