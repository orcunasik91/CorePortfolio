@model About
@{
    ViewData["Title"] = "Hakkımda Düzenle";
}
<div class="page-header">
    <a class="btn btn-primary mx-3" asp-area="Admin" asp-controller="About" asp-action="Index">Geri Dön</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="About" asp-action="Index">Hakkımda</a></li>
            <li class="breadcrumb-item active" aria-current="page">Hakkımda Düzenle</li>
        </ol>
    </nav>
</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Düzenle</h4>
            <form class="forms-sample" asp-area="Admin" asp-controller="About" asp-action="UpdateAbout" method="post">
                <input type="hidden" asp-for="AboutId" />
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-3 col-form-label">Başlık</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                    <div class="col-sm-9">
                        <textarea type="text" class="form-control" asp-for="Description" placeholder="Açıklama" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Age" class="col-sm-3 col-form-label">Yaş</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Age" placeholder="Yaş">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email Adres">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-3 col-form-label">Telefon</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Address" class="col-sm-3 col-form-label">Adres</label>
                    <div class="col-sm-9">
                        <textarea type="text" class="form-control" asp-for="Address" placeholder="Adres" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ImageUrl" class="col-sm-3 col-form-label">Görsel</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel">
                    </div>
                </div>
                <div class="form-group row justify-content-end align-items-end mr-0">
                    <button class="btn btn-success">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>